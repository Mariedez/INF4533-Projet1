doctype html
html
  head
    link(rel='stylesheet', href='/stylesheets/interface_courriel_css.css')
    meta(charset='UTF-8')
    script(src='/javascripts/courrielTemplate.js')
    block ressources
  body
    .Entete
      img(src='/images/uqo-logo.png', alt='uqo', width='150', height='50', align='right', filter='alpha(opacity=40)')
      h1.Titre Boîte de courriel
    .Tableau1
      input.BoutonTemplate(type='button', value='Nouveau message', id='nouveau message', onclick='nouvMessage();')
      input.BoutonTemplate(type='button', value='Boîte de réception', id='boite de reception', onclick='afficheInbox();')
      input.BoutonTemplate(type='button', value='Messages envoyés', id='messages envoyes', onclick='afficheOutbox();')
      input.BoutonTemplate(type='button', value='Liste des contacts', id='liste des contacts', onclick='afficheYp();')
    .Tableau2
      p#TitreCible.TitreTableau2= titre
       #NomUtilisateur=nomUtil
      block content
