extends courrielTemplate
block ressources
      script(src='javascripts/jquery-2.2.1.min.js')
      script(src='javascripts/login.js')
      script(src='javascripts/generateCle.js')
block content
      label(for='file') Fichier de clé privée: 
        input#file(type='file' name='file')
      form(method='post', onsubmit='return validateForm()', action='/connexion')
        div
          p#err(style='color:red;')= erreur
          label.controlLabel(for='usrnm') Nom d'utilisateur:
          input#usrnm(type='text', name='username', placeholder='Username')
          br
          br
          label.controlLabel(for='pswd') Mot de passe:
          input#pswd(type='password', name='password', placeholder='Password')
          br
          br
          input.BoutonBloc(type='submit', data-inline='true', value='Connexion')
          br
          br
          label.TitreTableau2(for='nouvelUtil') Nouvel utilisateur
          br
          br
          input.BoutonBloc(type='button', value='S\'inscrire', id='utilisateurs', onclick='afficheUtilisateurs();')

